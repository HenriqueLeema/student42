{
        "tasks": [
            {
                "type": "cppbuild",
                "label": "C/C++: gcc build active file",
                "command": "/usr/bin/gcc",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "-Wall",
                    "-Wextra",
                    "-Werror",
                    "-static",
                    "${file}",
                    "${fileDirname}/push_swap.h",
                    "-L${fileDirname}/Libft", "-lft",  // This assumes that the library is named libft.a
                    "-L${fileDirname}", "-lpush_swap"
                ],
                "options": {
                    "cwd": "${fileDirname}"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "detail": "Task generated by Debugger."
            }
        ],
        "version": "2.0.0"
    }
    